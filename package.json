{
  "name": "vpreproc",
  "version": "0.1.0",
  "description": "Verilog preprocessor bindings for Node.js",
  "main": "lib/index.js",
  "gypfile": true,
  "scripts": {
    "test": "eslint lib/ && nyc --reporter=lcov mocha",
    "install": "node-gyp rebuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drom/vpreproc.git"
  },
  "author": "Aliaksei Chapyzhenka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drom/vpreproc/issues"
  },
  "homepage": "https://github.com/drom/vpreproc#readme",
  "dependencies": {
    "bindings": "^1.3.1",
    "node-addon-api": "^1.6.2"
  },
  "devDependencies": {
    "@drom/eslint-config": "^0.7.0",
    "chai": "^4.2.0",
    "eslint": "^5.12.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0"
  },
  "eslintConfig": {
    "extends": "@drom/eslint-config/eslint4/node4",
    "rules": {
      "indent": [
        1,
        2
      ],
      "no-console": 1
    },
    "parserOptions": {
      "ecmaVersion": 2017
    }
  }
}
